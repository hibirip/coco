# Supabase 설정
VITE_SUPABASE_URL=https://your-project-id.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key-here

# Firebase 설정
VITE_FIREBASE_API_KEY=your_firebase_api_key_here
VITE_FIREBASE_AUTH_DOMAIN=your_firebase_auth_domain_here
VITE_FIREBASE_PROJECT_ID=your_firebase_project_id_here
VITE_FIREBASE_STORAGE_BUCKET=your_firebase_storage_bucket_here
VITE_FIREBASE_MESSAGING_SENDER_ID=your_firebase_messaging_sender_id_here
VITE_FIREBASE_APP_ID=your_firebase_app_id_here

# Google OAuth (선택사항)
VITE_GOOGLE_CLIENT_ID=your-google-client-id

# 앱 설정
VITE_APP_URL=http://localhost:5173

# API 설정
# 백엔드 프록시 서버 URL (배포환경용)
# 개발환경에서는 자동으로 localhost:8080 사용
VITE_BACKEND_URL=https://coco-proxy-server.onrender.com
# 예시: VITE_BACKEND_URL=https://your-backend-server.onrender.com

# CORS 허용 도메인 (프록시 서버용)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:5174

# 개발/프로덕션 모드
NODE_ENV=production

# Twitter/X API 설정 (선택사항)
# Twitter API v2 Bearer Token
# 가격: Free (500/월), Basic ($200/월, 10K), Pro ($5K/월, 1M)
# 없으면 폴백 Mock 데이터 사용
VITE_TWITTER_BEARER_TOKEN=your-twitter-bearer-token-here

# Photo Search APIs (Optional - will use fallback if not provided)
VITE_UNSPLASH_ACCESS_KEY=your-unsplash-access-key
VITE_PIXABAY_API_KEY=your-pixabay-api-key
VITE_PEXELS_API_KEY=your-pexels-api-key

# News APIs (Optional)
VITE_NEWS_API_KEY=your-news-api-key

# Development Settings
VITE_USE_MOCK_DATA=false
VITE_LOG_LEVEL=info

# 한국은행 ECOS API 키 (실시간 환율용)
# https://ecos.bok.or.kr/ 에서 회원가입 후 발급받으세요
# 무료로 사용 가능, 일 10,000회 호출 한도
BOK_API_KEY=your_bok_api_key_here
VITE_BOK_API_KEY=your_bok_api_key_here

# CoinMarketCap API 키 (선택사항)
# CMC_API_KEY=your_cmc_api_key_here

# CoinNess API 키 (선택사항)
# COINNESS_API_KEY=your_coinness_api_key_here

# 기타 설정
VITE_APP_NAME=Coco
VITE_APP_VERSION=1.0.0